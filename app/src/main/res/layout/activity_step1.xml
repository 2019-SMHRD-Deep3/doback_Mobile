                android:text="ㄴ" />

            <Button
                android:id="@+id/bnt_c3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="ㄷ" />

            <Button
                android:id="@+id/bnt_c4"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
